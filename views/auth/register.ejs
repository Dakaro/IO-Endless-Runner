<%- include('functions.ejs') %>
<div class="auth">
    <h1>Register</h1>
    <% if(errorMessage) { %>
        <p class="error-msg"><i class="fa-solid fa-circle-exclamation"></i><%= errorMessage %></p>
        <% } %>
    <form action="/auth/register" method="POST">
        <label for="username">Username</label>
        <div>
            <input name="username" placeholder="Username" type="text" maxlength="16" required>
        </div>
        <label for="password">Password</label>
        <div class="container--relative">
            <input name="password" id="password" placeholder="Password" type="password" class="password--peek" required>
            <i class="fa-solid fa-eye password-peek" onclick="peekPassword('password')" style="cursor: pointer;"></i>
        </div>
        <button type="submit" value="Submit">Register</button>
    </form>
</div>