<% let userToRender = userToDisplay ? userToDisplay : user %> 
<main>
    <div class="user-info">
        <img alt="avatar" class="avatar" src="/img/avatar_default_temp.png">
        <h1><%= userToRender.username %></h1>
    </div>
    
    <div class="user-stats">
        <p class="color-secondary">Playing since <%= userToRender.joinDate.toLocaleDateString() %>, last seen DATE</p>
    </div>
    
</main>