<main>
    <div class="user-info">
        <img alt="avatar" class="avatar" src="/img/avatar_default_temp.png">
        <h1><%= user.username %></h1>
    </div>
    
    <div class="user-stats">
        <p class="color-secondary">Playing since 27th August 2018</p>
        <button>New post</button>
    </div>
    
    <div class="posts-wrapper">
        <div class="create-post">
            <input type="text" class="input--big" placeholder="Post title">
            <textarea></textarea>
            <button>Save</button>
        </div>
    </div>
    
    <div class="posts-wrapper">
        <% user.posts.forEach((post) => { %> 
            <div class="post">
                <h4><%= post.title %></h4>
                <span class="color-secondary small"><%= post.date.toLocaleString() %></span>
                <p><%= post.content %></p>
            </div>
        <% }) %>         
    </div>
</main>